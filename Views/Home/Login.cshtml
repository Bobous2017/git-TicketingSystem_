@{
    ViewData["Title"] = "Login";
}

<img class="imageEventLogin" src="~/lib/bgEvent.png" alt="bg Event">
<div class="container">
    <div class="row justify-content-center align-items-center" style="height: 40vh;">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-sm rounded-lg">
                <div class="card-body rounded-lg">
                    <h2 class="text-center mb-4">Login</h2>
                    <form method="post" asp-controller="Home" asp-action="Login">
                        <div class="form-group mb-3 text-center">
                            <label for="email">Email address:</label>
                            <input type="email" class="form-control" id="email" name="email" required placeholder="Enter your email">
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="navbar-btn">Confirm</button>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
