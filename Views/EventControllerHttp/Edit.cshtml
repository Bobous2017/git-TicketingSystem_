@model TicketingSystemLibrary.Models.Event

<h1>Edit Event</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="EventID"></label>
        <input asp-for="EventID" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="AdminID"></label>
        <input asp-for="AdminID" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="EventName"></label>
        <input asp-for="EventName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EventDate"></label>
        <input asp-for="EventDate" type="datetime-local" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MaxTickets"></label>
        <input asp-for="MaxTickets" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
