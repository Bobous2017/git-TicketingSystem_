@model TicketingSystemLibrary.Models.Event


<div class="container">
    <div class="row justify-content-center align-items-center" style="height: 60vh;">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-sm rounded-lg">
                <div class="card-body rounded-lg">
                    <h2 class="text-center mb-4">Create Event</h2>
                    <form asp-action="Create" method="post">
                        <div class="form-group">
                            <label asp-for="AdminID"></label>
                            <input asp-for="AdminID" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="EventName"></label>
                            <input asp-for="EventName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="EventDate"></label>
                            <input asp-for="EventDate" type="datetime-local" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Location"></label>
                            <input asp-for="Location" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="MaxTickets"></label>
                            <input asp-for="MaxTickets" class="form-control" />
                        </div>
                       <br>
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>