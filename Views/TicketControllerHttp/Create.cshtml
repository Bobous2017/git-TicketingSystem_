@model TicketingSystemLibrary.Models.Ticket

<h1>Buy Ticket for Event: @Model.EventName</h1>

<form asp-controller="Ticket" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CustomerName">Customer Name</label>
        <input asp-for="CustomerName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <input asp-for="EventID" type="hidden" />
    <button type="submit" class="btn btn-primary">Buy Ticket</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
</form>
